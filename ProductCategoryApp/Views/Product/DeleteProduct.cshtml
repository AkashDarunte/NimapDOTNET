@model ProductCategoryApp.Models.Product

<h1>Delete Product</h1>

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.ProductId</dd>

        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Category ID</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>
    </dl>

    <form asp-action="DeleteProduct" method="post">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
