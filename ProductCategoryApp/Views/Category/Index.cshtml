@model IEnumerable<ProductCategoryApp.Models.Category>



<div>
    <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Go to Create Category</a>
</div>
<br/>

<div>
    <a href="@Url.Action("Delete", "Category")" class="btn btn-primary">Delete Category</a>
</div>
<br/>
<div>
    <a href="@Url.Action("Edit", "Category")" class="btn btn-primary">Update Category</a>
</div>
<br/>
<h1>Category List</h1>


@if (TempData["SuccessMessage"] != null)
{
    <div style="color: green;">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
            </tr>
        }
    </tbody>
</table>
